        <GradientStop Color="#000000" Offset="0.5"/>
        <GradientStop Color="#00000000" Offset="0.55"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="OverlayTitle" StartPoint="0.5,0" EndPoint="0.5,1" >
